{
    "manifest_version": 3,
    "name": "Tabs count exporter",
    "version": "1.0",

    "developer": {
        "name": "madhead",
        "url": "https://github.com/madhead"
    },

    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],

    "icons": {
        "48": "icon.svg"
    },

    "action": {},

    "options_ui": {
        "page": "options.html"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "ff-tabs-count-exporter@kwntfd"
        }
    }
}
